@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                                <th scope="col">Günün Fırsatı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count ++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.City</td>
                                    <td>@item.District</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Type</td>
                                    <td><a href="/Product/DeleteProduct/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Product/ProductDetail/@item.ID" class="btn btn-outline-primary">Sitede Gör</a></td>

                                    <td>
                                        @if (item.DealOfTheDay == true)
                                        {
                                            <a href="/Product/ProductDealOfTheDayStatusChangeToFalse/@item.ID" class="btn btn-outline-warning">Pasif Yap</a>
                                        }
                                        @if (item.DealOfTheDay == false)
                                        {
                                            <a href="/Product/ProductDealOfTheDayStatusChangeToTrue/@item.ID" class="btn btn-outline-secondary">Aktif Yap</a>

                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
        </<div>
        </div>


